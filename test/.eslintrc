{
  "env": {
    "mocha": true
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "no-unused-expressions": "off",
    "padded-blocks": "off",
    "indent": ["error", 4],
    "space-in-parens": "off",
    "semi": ["error", "never"],
    "func-names": "off",
    "no-underscore-dangle": "off"
  }
}
